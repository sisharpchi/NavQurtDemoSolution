<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavQurt.Server.App.Views.SignInPage"
             Title="Sign in">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Label Text="General API Portal" Style="{StaticResource Headline}" />
            <Label Text="Enter your credentials to request tokens from the General API." />

            <Entry Placeholder="Username or email" Text="{Binding UserNameOrEmail}" />
            <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
            <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                <Label Text="Remember me" VerticalOptions="Center" />
                <Switch IsToggled="{Binding RememberMe}" />
            </HorizontalStackLayout>

            <Button Text="Sign in" Command="{Binding SignInCommand}" />
            <Button Text="Clear" Command="{Binding ClearCommand}" />
            <Button Text="Create account" Command="{Binding GoSignUpCommand}" />

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
            <Label Text="{Binding StatusMessage}" TextColor="Green" />
            <Label Text="{Binding ErrorMessage}" TextColor="Red" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
